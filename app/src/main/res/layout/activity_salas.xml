<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:http="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:theme="@style/CardView.Dark">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="SpeakableTextPresentCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:layout_marginTop="30dp"
                http:layout_constraintEnd_toEndOf="parent"
                http:layout_constraintStart_toStartOf="parent"
                http:layout_constraintTop_toBottomOf="@+id/cardView3">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/alegreya"
                    android:gravity="center"
                    android:text="@string/tituloSala2"
                    android:textColor="#020202"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="183dp"
                    android:layout_height="135dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="60dp"
                    http:srcCompat="@drawable/habitaciones2" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="134dp"
                    android:layout_height="138dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="30dp"
                    android:fontFamily="@font/alegreya"
                    android:text="@string/infoSala1"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView24"
                            android:layout_width="202dp"
                            android:layout_height="match_parent"
                            android:paddingRight="20dp"
                            android:text="@string/Servicios"
                            android:textColor="#000000"
                            tools:text="@string/Servicios" />

                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Instalaciones"
                            android:textColor="#000000" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/textView25"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingRight="20dp"
                            android:text="@string/Servicios2"
                            android:textColor="#000000"
                            tools:text="@string/Servicios3" />

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Instalaciones1"
                            android:textColor="#000000"
                            tools:text="@string/Instalaciones1" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingRight="20dp"
                            android:text="@string/Servicios1"
                            android:textColor="#000000"
                            tools:text="@string/Servicios1" />

                        <TextView
                            android:id="@+id/textView28"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Instalaciones3"
                            android:textColor="#000000"
                            tools:text="@string/Instalaciones3" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/textView29"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingRight="20dp"
                            android:text="@string/Servicios2"
                            android:textColor="#000000"
                            tools:text="@string/Servicios2" />

                        <TextView
                            android:id="@+id/textView30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Instalaciones2"
                            android:textColor="#000000"
                            tools:text="@string/Instalaciones2" />
                    </TableRow>

                </TableLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                http:layout_constraintEnd_toEndOf="parent"
                http:layout_constraintStart_toStartOf="parent"
                http:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/alegreya"
                    android:text="@string/tituloSala1"
                    android:textColor="#050505"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="183dp"
                    android:layout_height="194dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="40dp"
                    http:srcCompat="@drawable/habitaciones" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="134dp"
                    android:layout_height="138dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="30dp"
                    android:fontFamily="@font/alegreya"
                    android:text="@string/infoSala1"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/Servicios"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingRight="20dp"
                            android:text="@string/Servicios"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/Instalaciones"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Instalaciones"
                            android:textColor="#000000" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/Servicios1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingTop="0dp"
                            android:paddingRight="20dp"
                            android:text="@string/Servicios1"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/Instalaciones1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Instalaciones1"
                            android:textColor="#000000" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/Servicios2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingRight="40dp"
                            android:text="@string/Servicios2"
                            android:textColor="#000000" />

                    </TableRow>

                </TableLayout>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>